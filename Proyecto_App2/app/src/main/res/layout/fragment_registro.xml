<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titulo_registrar"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/registro"
        android:textAlignment="center"
        android:textColor="@color/android_green"
        android:textSize="@dimen/textSize_titulo_registro" />

    <RelativeLayout
        android:layout_width="@dimen/width_linea_registro"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@color/android_green" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_registro"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:theme="@style/CardView"
        card_view:cardBackgroundColor="@color/black"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="25dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/agregar_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nombre"
                    android:textSize="@dimen/textSize_edit_text_registro" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/agregar_apellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/apellido"
                    android:textSize="@dimen/textSize_edit_text_registro" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/agregar_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/correo"
                    android:inputType="textUri"
                    android:textSize="@dimen/textSize_edit_text_registro" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/agregar_contrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/contasenia"
                    android:inputType="textPassword"
                    android:textSize="@dimen/textSize_edit_text_registro"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/registr_confirmar_contrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirmar_contasenia"
                    android:inputType="textPassword"
                    android:textSize="@dimen/textSize_edit_text_registro"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/agregar_administrador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="@color/android_darkgreen"
                android:elevation="10dp"
                android:padding="10dp"
                android:text="@string/registrarse"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_registro_button_text"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>