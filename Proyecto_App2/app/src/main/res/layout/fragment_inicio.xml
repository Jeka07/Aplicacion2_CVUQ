<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagen_detalle"
        android:layout_width="@dimen/tamanio_imagen_width"
        android:layout_height="@dimen/tamanio_imagen_height"
        android:background="@color/white"
        android:contentDescription=""
        android:elevation="5dp"
        android:src="@drawable/logo1" />

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/width_card_inicio"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_inicio"
        android:padding="10dp"
        card_view:cardBackgroundColor="@color/android_green"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/bienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bienvenido"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_bienvenida"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/nombre_usuario_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_bienvenida"
                android:typeface="sans"/>

            <RelativeLayout
                android:layout_width="@dimen/width_linea_inicio"
                android:layout_height="8dp"
                android:background="@color/white" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>